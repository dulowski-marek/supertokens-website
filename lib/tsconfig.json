{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "module": "commonJS",
        "outDir": "build",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.collection"
        ]
    },
    "compileOnSave": true
}